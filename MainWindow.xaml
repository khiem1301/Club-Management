        <!-- Modern Events Template -->
        <DataTemplate x:Key="EventsTemplate">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0">
                <Grid Margin="40">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Modern Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Quản Lý Sự Kiện" FontSize="32" FontWeight="Bold"
                                   Foreground="Black" Margin="0,0,0,5"/>
                            <TextBlock Text="Lập kế hoạch, tổ chức và theo dõi tất cả sự kiện một cách liền mạch."
                                   FontSize="16" Foreground="Black"/>
                        </StackPanel>

                        <Button Grid.Column="1" Background="#3498DB" Foreground="White" BorderThickness="0"
                            Padding="20,12" FontWeight="Medium" Margin="0,0,12,0"
                            Command="{Binding EventManagementViewModel.RefreshCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔄" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Làm Mới" FontSize="14"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!-- Modern Controls -->
                    <Grid Grid.Row="1" Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search -->
                        <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="16" Margin="0,0,15,0">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.05" BlurRadius="8"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#F1F5F9" CornerRadius="8" Width="32" Height="32" Margin="0,0,12,0">
                                    <TextBlock Text="🔍" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBox Grid.Column="1" Text="{Binding EventManagementViewModel.SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                     BorderThickness="0" Background="Transparent"
                                     VerticalAlignment="Center" FontSize="16"
                                     Foreground="Black" FontWeight="Medium"/>
                            </Grid>
                        </Border>

                        <!-- Status Filter -->
                        <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="16" Margin="7.5,0">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.05" BlurRadius="8"/>
                            </Border.Effect>
                            <ComboBox Background="Transparent" BorderThickness="0" FontSize="16"
                                  Foreground="Black" FontWeight="Medium"
                                  SelectedItem="{Binding EventManagementViewModel.SelectedStatus}">
                                <ComboBoxItem IsSelected="True" Content="All Events"/>
                                <ComboBoxItem Content="Scheduled"/>
                                <ComboBoxItem Content="InProgress"/>
                                <ComboBoxItem Content="Completed"/>
                                <ComboBoxItem Content="Cancelled"/>
                            </ComboBox>
                        </Border>

                        <!-- Date Filter -->
                        <Border Grid.Column="2" Background="White" CornerRadius="12" Padding="16" Margin="15,0,0,0">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.05" BlurRadius="8"/>
                            </Border.Effect>
                            <DatePicker  SelectedDate="{Binding EventManagementViewModel.SelectedDate}" Background="Transparent" BorderThickness="0" FontSize="16"
                                    Foreground="Black" FontWeight="Medium"/>
                        </Border>
                    </Grid>

                    <!-- Modern Events List -->
                    <Border Grid.Row="2" Background="White" CornerRadius="16" Padding="0">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.05" BlurRadius="12"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Table Header -->
                            <Border Grid.Row="0" Background="#F8FAFC" CornerRadius="16,16,0,0" Padding="24,20">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="110"/>
                                        <ColumnDefinition Width="180"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="Tên Sự Kiện" FontSize="14" FontWeight="Bold" Foreground="Black"/>
                                    <TextBlock Grid.Column="1" Text="Câu Lạc Bộ" FontSize="14" FontWeight="Bold" Foreground="Black"/>
                                    <TextBlock Grid.Column="2" Text="Hạn đăng kí" FontSize="14" FontWeight="Bold" Foreground="Black"/>
                                    <TextBlock Grid.Column="3" Text="Ngày Sự Kiện" FontSize="14" FontWeight="Bold" Foreground="Black"/>
                                    <TextBlock Grid.Column="4" Text="Địa Điểm" FontSize="14" FontWeight="Bold" Foreground="Black"/>
                                    <TextBlock Grid.Column="5" Text="Người Tham Gia" FontSize="14" FontWeight="Bold" Foreground="Black"/>
                                    <TextBlock Grid.Column="6" Text="Thao Tác" FontSize="14" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- Table Content -->
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24,0,24,24">
                                <ItemsControl ItemsSource="{Binding EventManagementViewModel.FilteredEvents}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="Transparent" Padding="0,16" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="120"/>
                                                        <ColumnDefinition Width="150"/>
                                                        <ColumnDefinition Width="150"/>
                                                        <ColumnDefinition Width="110"/>
                                                        <ColumnDefinition Width="180"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Medium" Foreground="Black"/>
                                                        <TextBlock Text="{Binding Description}" FontSize="12" Foreground="Black" TextTrimming="CharacterEllipsis" Margin="0,2,0,0"/>
                                                    </StackPanel>

                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Club.Name}" FontSize="16" FontWeight="Medium" Foreground="Black"/>
                                                    </StackPanel>

                                                    <TextBlock Grid.Column="2" Text="{Binding RegistrationDeadline, StringFormat='{}{0:MMM dd, yyyy}'}" FontSize="14" Foreground="Black" VerticalAlignment="Center"/>
                                                    <TextBlock Grid.Column="3" Text="{Binding EventDate, StringFormat='{}{0:MMM dd, yyyy}'}" FontSize="14" Foreground="Black" VerticalAlignment="Center"/>

                                                    <StackPanel Grid.Column="4" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Location}" FontSize="14" Foreground="Black" FontWeight="Medium"/>
                                                    </StackPanel>

                                                    <Border Grid.Column="5" Background="#F0F9FF" CornerRadius="6" Padding="8,4" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Participants.Count}" FontSize="14" FontWeight="Bold" Foreground="Black"/>
                                                    </Border>

                                                    <StackPanel Grid.Column="6" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <Button Background="#3B82F6" Foreground="White" BorderThickness="0"
                                                            Padding="8" Margin="0,0,4,0" ToolTip="View"
                                                            Command="{Binding DataContext.EventManagementViewModel.ViewEventCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}">
                                                            <TextBlock Text="👁️" FontSize="12"/>
                                                        </Button>

                                                        <Button Background="#27AE60" Foreground="White" BorderThickness="0"
                                                                Padding="8" Margin="0,0,4,0" ToolTip="Join"
                                                                Command="{Binding DataContext.EventManagementViewModel.JoinEventCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                CommandParameter="{Binding}"
                                                                Visibility="{Binding CanJoinEvents, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                                >
                                                            <TextBlock Text="🙌" FontSize="12"/>
                                                        </Button>

                                                        <Button Background="#F59E0B" Foreground="White" BorderThickness="0"
                                                            Padding="8" Margin="2,0" ToolTip="Edit"
                                                            Command="{Binding DataContext.EventManagementViewModel.EditEventCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}">
                                                            <TextBlock Text="✏️" FontSize="12"/>
                                                        </Button>

                                                        <Button Background="#3498DB" Foreground="White" BorderThickness="0"
                                                                Padding="8" Margin="2,0" ToolTip="Manage"
                                                                Command="{Binding DataContext.EventManagementViewModel.ManageParticipantsCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                CommandParameter="{Binding}">
                                                                <TextBlock Text="✔" FontSize="12"/>
                                                        </Button>

                                                        <Button Background="#EF4444" Foreground="White" BorderThickness="0"
                                                            Padding="8" Margin="4,0,0,0" ToolTip="Delete"
                                                            Command="{Binding DataContext.EventManagementViewModel.DeleteEventCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}">
                                                            <TextBlock Text="🗑️" FontSize="12"/>
                                                        </Button>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </ScrollViewer>
        </DataTemplate>



        <converters:ViewTemplateConverter x:Key="ViewTemplateConverter"
                                          DashboardTemplate="{StaticResource DashboardTemplate}"
                                          UsersTemplate="{StaticResource UsersTemplate}"
                                          UserManagementTemplate="{StaticResource UserManagementTemplate}"
                                          ClubsTemplate="{StaticResource ClubsTemplate}"
                                          EventsTemplate="{StaticResource EventsTemplate}"
                                          ReportsTemplate="{StaticResource ReportsTemplate}"/>
 </Window.Resources>

    <!-- Main Container with Modern Design -->
    <Border CornerRadius="12" Background="White" BorderThickness="1" BorderBrush="#E0E6ED">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="8" Opacity="0.15" BlurRadius="20"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0" CornerRadius="12,12,0,0" Height="60" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#667eea" Offset="0"/>
                        <GradientStop Color="#764ba2" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid Margin="20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- App Icon and Title -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <Border Width="40" Height="40" Margin="0,0,12,0" CornerRadius="8" Background="White" Padding="4">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.2" BlurRadius="6"/>
                            </Border.Effect>
                            <Viewbox>
                                <Canvas Width="100" Height="100">
                                    <!-- Background circle -->
                                    <Ellipse Canvas.Left="5" Canvas.Top="5" Width="90" Height="90" Fill="#3B82F6" Stroke="#1E40AF" StrokeThickness="2"/>
                                    
                                    <!-- Club building/house shape -->
                                    <Canvas Canvas.Left="50" Canvas.Top="50">
                                        <!-- Main building -->
                                        <Rectangle Canvas.Left="-18" Canvas.Top="-5" Width="36" Height="25" Fill="#FFFFFF" RadiusX="2" RadiusY="2"/>
                                        
                                        <!-- Roof -->
                                        <Polygon Points="-22,-5 0,-20 22,-5" Fill="#EF4444" Stroke="#DC2626" StrokeThickness="1"/>
                                        
                                        <!-- Door -->
                                        <Rectangle Canvas.Left="-4" Canvas.Top="8" Width="8" Height="12" Fill="#8B5CF6" RadiusX="1" RadiusY="1"/>
                                        <Ellipse Canvas.Left="1.2" Canvas.Top="13.2" Width="1.6" Height="1.6" Fill="#FFFFFF"/>
                                        
                                        <!-- Windows -->
                                        <Rectangle Canvas.Left="-14" Canvas.Top="-1" Width="6" Height="6" Fill="#60A5FA" RadiusX="1" RadiusY="1"/>
                                        <Rectangle Canvas.Left="8" Canvas.Top="-1" Width="6" Height="6" Fill="#60A5FA" RadiusX="1" RadiusY="1"/>
                                        
                                        <!-- Window frames -->
                                        <Line X1="-11" Y1="-1" X2="-11" Y2="5" Stroke="#FFFFFF" StrokeThickness="0.5"/>
                                        <Line X1="-14" Y1="2" X2="-8" Y2="2" Stroke="#FFFFFF" StrokeThickness="0.5"/>
                                        <Line X1="11" Y1="-1" X2="11" Y2="5" Stroke="#FFFFFF" StrokeThickness="0.5"/>
                                        <Line X1="8" Y1="2" X2="14" Y2="2" Stroke="#FFFFFF" StrokeThickness="0.5"/>
                                        
                                        <!-- People icons (representing club members) -->
                                        <Canvas Canvas.Left="-8" Canvas.Top="-25">
                                            <Ellipse Canvas.Left="-2.5" Canvas.Top="-2.5" Width="5" Height="5" Fill="#FCD34D"/>
                                            <Ellipse Canvas.Left="-3" Canvas.Top="2" Width="6" Height="8" Fill="#10B981"/>
                                        </Canvas>
                                        
                                        <Canvas Canvas.Left="0" Canvas.Top="-25">
                                            <Ellipse Canvas.Left="-2.5" Canvas.Top="-2.5" Width="5" Height="5" Fill="#FCD34D"/>
                                            <Ellipse Canvas.Left="-3" Canvas.Top="2" Width="6" Height="8" Fill="#F59E0B"/>
                                        </Canvas>
                                        
                                        <Canvas Canvas.Left="8" Canvas.Top="-25">
                                            <Ellipse Canvas.Left="-2.5" Canvas.Top="-2.5" Width="5" Height="5" Fill="#FCD34D"/>
                                            <Ellipse Canvas.Left="-3" Canvas.Top="2" Width="6" Height="8" Fill="#EF4444"/>
                                        </Canvas>
                                    </Canvas>
                                    
                                    <!-- Decorative elements -->
                                    <Ellipse Canvas.Left="18" Canvas.Top="23" Width="4" Height="4" Fill="#FBBF24" Opacity="0.7"/>
                                    <Ellipse Canvas.Left="77" Canvas.Top="28" Width="3" Height="3" Fill="#34D399" Opacity="0.7"/>
                                    <Ellipse Canvas.Left="21.4" Canvas.Top="71.4" Width="3.6" Height="3.6" Fill="#F472B6" Opacity="0.7"/>
                                    <Ellipse Canvas.Left="70.6" Canvas.Top="65.6" Width="4.4" Height="4.4" Fill="#A78BFA" Opacity="0.7"/>
                                </Canvas>
                            </Viewbox>
                        </Border>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                            <TextBlock Text="Quản Lý Câu Lạc Bộ" FontSize="16" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <TextBlock Text="{Binding CurrentUser.Club.Name}" FontSize="11" Foreground="White" Opacity="0.8" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- User Info -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                        <Border Background="#FFFFFF20" CornerRadius="20" Padding="12,6">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="😊" FontSize="18" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding CurrentUser.FullName}" FontSize="13" FontWeight="Medium" Foreground="Black" VerticalAlignment="Center"/>
                                <Button Content="↪" Width="24" Height="24" Background="Transparent" Foreground="Black" BorderThickness="0" FontSize="16" Margin="8,0,0,0" Command="{Binding LogoutCommand}" Cursor="Hand" ToolTip="Sign Out">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="12">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#40FFFFFF"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Window Controls -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="🗕" Width="30" Height="30" Background="Transparent" Foreground="White" BorderThickness="0" FontSize="12" Margin="2,0" Click="MinimizeButton_Click" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#40FFFFFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="MaximizeRestoreButton" Content="🗖" Width="30" Height="30" Background="Transparent" Foreground="White" BorderThickness="0" FontSize="12" Margin="2,0" Click="MaximizeRestoreButton_Click" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#40FFFFFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="✕" Width="30" Height="30" Background="Transparent" Foreground="White" BorderThickness="0" FontSize="12" Margin="2,0" Click="CloseButton_Click" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#ff4757"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Modern Navigation Sidebar -->
                <Border Grid.Column="0" Background="#F8FAFC" BorderBrush="#E2E8F0" BorderThickness="0,0,1,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Margin="20,30,20,20">

                            <!-- Navigation Header -->
                            <TextBlock Text="ĐIỀU HƯỚNG" FontSize="12" FontWeight="SemiBold" Foreground="Black" Margin="0,0,0,15"/>

