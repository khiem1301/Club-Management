<Window x:Class="ClubManagementApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClubManagementApp"
        xmlns:converters="clr-namespace:ClubManagementApp.Converters"
        xmlns:vm="clr-namespace:ClubManagementApp.ViewModels"
        xmlns:views="clr-namespace:ClubManagementApp.Views"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Ứng Dụng Quản Lý Câu Lạc Bộ"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        ResizeMode="CanResize"
        MinWidth="1200"
        MinHeight="800">

    <Window.Resources>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                        CornerRadius="4" 
                        Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ReportTypeButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#6C757D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Navigation Button Style -->
        <Style x:Key="NavigationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#ecf0f1"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2c3e50"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True">
                                <Setter Property="Background" Value="#3498db"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Navigation Button Style -->
        <Style x:Key="ModernNavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8" Margin="8,2">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3B82F6"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2563EB"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True">
                                <Setter Property="Background" Value="#3B82F6"/>
                                <Setter Property="Foreground" Value="White"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Dashboard Template -->
        <DataTemplate x:Key="DashboardTemplate">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0">
                <Grid Margin="40" Visibility="{Binding CanAccessAdminFeatures, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Modern Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <!-- Dashboard Icon -->
                            <Border Width="60" Height="60" Margin="0,0,20,0" CornerRadius="12" Background="White" Padding="6">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.1" BlurRadius="8"/>
                                </Border.Effect>
                                <Viewbox>
                                    <Canvas Width="100" Height="100">
                                        <!-- Background circle -->
                                        <Ellipse Canvas.Left="5" Canvas.Top="5" Width="90" Height="90" Fill="#3B82F6" Stroke="#1E40AF" StrokeThickness="2"/>
                                        
                                        <!-- Club building/house shape -->
                                        <Canvas Canvas.Left="50" Canvas.Top="50">
                                            <!-- Main building -->
                                            <Rectangle Canvas.Left="-18" Canvas.Top="-5" Width="36" Height="25" Fill="#FFFFFF" RadiusX="2" RadiusY="2"/>
                                            
                                            <!-- Roof -->
                                            <Polygon Points="-22,-5 0,-20 22,-5" Fill="#EF4444" Stroke="#DC2626" StrokeThickness="1"/>
                                            
                                            <!-- Door -->
                                            <Rectangle Canvas.Left="-4" Canvas.Top="8" Width="8" Height="12" Fill="#8B5CF6" RadiusX="1" RadiusY="1"/>
                                            <Ellipse Canvas.Left="1.2" Canvas.Top="13.2" Width="1.6" Height="1.6" Fill="#FFFFFF"/>
                                            
                                            <!-- Windows -->
                                            <Rectangle Canvas.Left="-14" Canvas.Top="-1" Width="6" Height="6" Fill="#60A5FA" RadiusX="1" RadiusY="1"/>
                                            <Rectangle Canvas.Left="8" Canvas.Top="-1" Width="6" Height="6" Fill="#60A5FA" RadiusX="1" RadiusY="1"/>
                                            
                                            <!-- Window frames -->
                                            <Line X1="-11" Y1="-1" X2="-11" Y2="5" Stroke="#FFFFFF" StrokeThickness="0.5"/>
                                            <Line X1="-14" Y1="2" X2="-8" Y2="2" Stroke="#FFFFFF" StrokeThickness="0.5"/>
                                            <Line X1="11" Y1="-1" X2="11" Y2="5" Stroke="#FFFFFF" StrokeThickness="0.5"/>
                                            <Line X1="8" Y1="2" X2="14" Y2="2" Stroke="#FFFFFF" StrokeThickness="0.5"/>
                                            
                                            <!-- People icons (representing club members) -->
                                            <Canvas Canvas.Left="-8" Canvas.Top="-25">
                                                <Ellipse Canvas.Left="-2.5" Canvas.Top="-2.5" Width="5" Height="5" Fill="#FCD34D"/>
                                                <Ellipse Canvas.Left="-3" Canvas.Top="2" Width="6" Height="8" Fill="#10B981"/>
                                            </Canvas>
                                            
                                            <Canvas Canvas.Left="0" Canvas.Top="-25">
                                                <Ellipse Canvas.Left="-2.5" Canvas.Top="-2.5" Width="5" Height="5" Fill="#FCD34D"/>
                                                <Ellipse Canvas.Left="-3" Canvas.Top="2" Width="6" Height="8" Fill="#F59E0B"/>
                                            </Canvas>
                                            
                                            <Canvas Canvas.Left="8" Canvas.Top="-25">
                                                <Ellipse Canvas.Left="-2.5" Canvas.Top="-2.5" Width="5" Height="5" Fill="#FCD34D"/>
                                                <Ellipse Canvas.Left="-3" Canvas.Top="2" Width="6" Height="8" Fill="#EF4444"/>
                                            </Canvas>
                                        </Canvas>
                                        
                                        <!-- Decorative elements -->
                                        <Ellipse Canvas.Left="18" Canvas.Top="23" Width="4" Height="4" Fill="#FBBF24" Opacity="0.7"/>
                                        <Ellipse Canvas.Left="77" Canvas.Top="28" Width="3" Height="3" Fill="#34D399" Opacity="0.7"/>
                                        <Ellipse Canvas.Left="21.4" Canvas.Top="71.4" Width="3.6" Height="3.6" Fill="#F472B6" Opacity="0.7"/>
                                        <Ellipse Canvas.Left="70.6" Canvas.Top="65.6" Width="4.4" Height="4.4" Fill="#A78BFA" Opacity="0.7"/>
                                    </Canvas>
                                </Viewbox>
                            </Border>
                            
                            <!-- Dashboard Text -->
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Bảng Điều Khiển" FontSize="32" FontWeight="Bold"
                                       Foreground="Black" Margin="0,0,0,5"/>
                                <TextBlock Text="Chào mừng trở lại! Đây là những gì đang diễn ra với các câu lạc bộ của bạn."
                                       FontSize="16" Foreground="Black"/>
                            </StackPanel>
                        </StackPanel>

                        <Button Grid.Column="1"
                                Command="{Binding DashboardViewModel.RefreshCommand}"
                                Background="#2E86AB"
                                Foreground="White"
                                BorderThickness="1"
                                BorderBrush="#1E5F7A"
                                Padding="16,10"
                                FontWeight="SemiBold"
                                FontSize="14"
                                Cursor="Hand"
                                ToolTip="Refresh dashboard data from database">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#2E86AB"/>
                                    <Setter Property="BorderBrush" Value="#1E5F7A"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="12"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#3A9BC1"/>
                                            <Setter Property="BorderBrush" Value="#2E86AB"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#1E5F7A"/>
                                            <Setter Property="BorderBrush" Value="#0F3A4A"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Background" Value="#CCCCCC"/>
                                            <Setter Property="BorderBrush" Value="#999999"/>
                                            <Setter Property="Foreground" Value="#666666"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔄" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Làm Mới" FontSize="14" FontWeight="Medium" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!-- Modern Stats Cards -->
                    <Grid Grid.Row="1" Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Total Users Card -->
                        <Border Grid.Column="0" Background="White" CornerRadius="16" Padding="24" Margin="0,0,15,0">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.05" BlurRadius="12"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Background="#EFF6FF" CornerRadius="12" Width="48" Height="48" HorizontalAlignment="Left">
                                    <TextBlock Text="👥" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <TextBlock Grid.Row="1" Text="{Binding DashboardViewModel.TotalUsers}" FontSize="36" FontWeight="Bold"
                                       Foreground="Black" Margin="0,16,0,4"/>
                                <TextBlock Grid.Row="2" Text="Tổng Người Dùng" FontSize="14" FontWeight="Medium"
                                       Foreground="Black"/>
                            </Grid>
                        </Border>

                        <!-- Total Clubs Card -->
                        <Border Grid.Column="1" Background="White" CornerRadius="16" Padding="24" Margin="7.5,0">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.05" BlurRadius="12"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Background="#F0FDF4" CornerRadius="12" Width="48" Height="48" HorizontalAlignment="Left">
                                    <TextBlock Text="🏛️" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <TextBlock Grid.Row="1" Text="{Binding DashboardViewModel.TotalClubs}" FontSize="36" FontWeight="Bold"
                                       Foreground="Black" Margin="0,16,0,4"/>
                                <TextBlock Grid.Row="2" Text="Tổng Câu Lạc Bộ" FontSize="14" FontWeight="Medium"
                                       Foreground="Black"/>
                            </Grid>
                        </Border>

                        <!-- Total Events Card -->
                        <Border Grid.Column="2" Background="White" CornerRadius="16" Padding="24" Margin="7.5,0">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.05" BlurRadius="12"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Background="#FFFBEB" CornerRadius="12" Width="48" Height="48" HorizontalAlignment="Left">
                                    <TextBlock Text="📅" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <TextBlock Grid.Row="1" Text="{Binding DashboardViewModel.TotalEvents}" FontSize="36" FontWeight="Bold"
                                       Foreground="Black" Margin="0,16,0,4"/>
                                <TextBlock Grid.Row="2" Text="Tổng Sự Kiện" FontSize="14" FontWeight="Medium"
                                       Foreground="Black"/>
                            </Grid>
                        </Border>

                        <!-- Total Reports Card -->
                        <Border Grid.Column="3" Background="White" CornerRadius="16" Padding="24" Margin="15,0,0,0">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.05" BlurRadius="12"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Background="#FEF2F2" CornerRadius="12" Width="48" Height="48" HorizontalAlignment="Left">
                                    <TextBlock Text="📈" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <TextBlock Grid.Row="1" Text="{Binding DashboardViewModel.TotalReports}" FontSize="36" FontWeight="Bold"
                                       Foreground="Black" Margin="0,16,0,4"/>
                                <TextBlock Grid.Row="2" Text="Tổng Báo Cáo" FontSize="14" FontWeight="Medium"
                                       Foreground="Black"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Modern Recent Activity -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Recent Events -->
                        <Border Grid.Column="0" Background="White" CornerRadius="16" Padding="32" Margin="0,0,15,0">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.05" BlurRadius="12"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Margin="0,0,0,24">
                                    <TextBlock Text="Sự Kiện Gần Đây" FontSize="20" FontWeight="Bold"
                                           Foreground="Black" Margin="0,0,0,4"/>
                                    <TextBlock Text="Các sự kiện mới nhất từ câu lạc bộ của bạn"
                                           FontSize="14" Foreground="Black"/>
                                </StackPanel>

                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="500">
                                    <ItemsControl ItemsSource="{Binding DashboardViewModel.RecentEvents}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#F8FAFC" CornerRadius="12" Padding="16" Margin="0,0,0,12">
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="16"
                                                               Foreground="Black" Margin="0,0,0,4"/>
                                                        <TextBlock Text="{Binding EventDate, StringFormat='Date: {0:MMM dd, yyyy}'}"
                                                               FontSize="14" Foreground="Black"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>
                        </Border>

                        <!-- Enhanced Quick Actions -->
                        <Border Grid.Column="1" Background="White" CornerRadius="16" Padding="24" Margin="15,0,0,0">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.05" BlurRadius="12"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                                    <TextBlock Text="Thao Tác Nhanh" FontSize="20" FontWeight="Bold"
                                           Foreground="Black" Margin="0,0,0,4"/>
                                    <TextBlock Text="Các tác vụ thông thường và tiện ích hữu ích"
                                           FontSize="14" Foreground="#64748B"/>
                                </StackPanel>

                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Primary Actions -->
                                        <StackPanel Grid.Row="0" Margin="0,0,0,16">
                                            <TextBlock Text="Tác Vụ Chính" FontSize="14" FontWeight="SemiBold" 
                                                   Foreground="#374151" Margin="0,0,0,8"/>
                                            
                                            <!-- Add Club Card -->
                                            <Border Background="#F8FAFC" CornerRadius="12" Padding="16" Margin="0,0,0,8"
                                                BorderBrush="#E2E8F0" BorderThickness="1"
                                                Visibility="{Binding CanCreateClubs, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <Button Background="Transparent" BorderThickness="0" Padding="0"
                                                    Command="{Binding ClubManagementViewModel.AddClubCommand}"
                                                    HorizontalContentAlignment="Stretch">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Border Grid.Column="0" Background="#8B5CF6" CornerRadius="8" 
                                                            Width="32" Height="32" Margin="0,0,12,0">
                                                            <TextBlock Text="🏛️" Foreground="White" FontSize="16" HorizontalAlignment="Center" 
                                                                   VerticalAlignment="Center"/>
                                                        </Border>
                                                        
                                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                            <TextBlock Text="Tạo Câu Lạc Bộ" FontSize="14" FontWeight="Medium" 
                                                                   Foreground="#8B5CF6"/>
                                                            <TextBlock Text="Tạo câu lạc bộ mới" FontSize="12" 
                                                                   Foreground="#6B7280"/>
                                                        </StackPanel>
                                                        
                                                        <TextBlock Grid.Column="2" Text="→" FontSize="16" 
                                                               Foreground="#9CA3AF" VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Button>
                                            </Border>

                                            <!-- Report Card -->
                                            <Border Background="#F8FAFC" CornerRadius="12" Padding="16" Margin="0,0,0,8"
                                                BorderBrush="#E2E8F0" BorderThickness="1"
                                                Visibility="{Binding CanGenerateReports, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <Button Background="Transparent" BorderThickness="0" Padding="0"
                                                    Command="{Binding ReportsViewModel.GenerateReportCommand}"
                                                    HorizontalContentAlignment="Stretch">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <Border Grid.Column="0" Background="#EF4444" CornerRadius="8" 
                                                            Width="32" Height="32" Margin="0,0,12,0">
                                                            <TextBlock Text="📈" Foreground="White" FontSize="16" HorizontalAlignment="Center" 
                                                                   VerticalAlignment="Center"/>
                                                        </Border>
                                                        
                                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                            <TextBlock Text="Tạo thống kê" FontSize="14" FontWeight="Medium" 
                                                                   Foreground="#1F2937"/>
                                                            <TextBlock Text="Xuất thống kê hàng tháng" FontSize="12" 
                                                                   Foreground="#6B7280"/>
                                                        </StackPanel>
                                                        
                                                        <TextBlock Grid.Column="2" Text="→" FontSize="16" 
                                                               Foreground="#9CA3AF" VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Button>
                                            </Border>
                                        </StackPanel>




                                    </Grid>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </DataTemplate>

        <!-- Modern Users Template -->
        <DataTemplate x:Key="UsersTemplate">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0">
                <Grid Margin="40">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Modern Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Quản Lý Người Dùng" FontSize="32" FontWeight="Bold"
                                   Foreground="Black" Margin="0,0,0,5"/>
                            <TextBlock Text="Quản lý người dùng, vai trò và quyền hạn trong tổ chức của bạn."
                                   FontSize="16" Foreground="Black"/>
                        </StackPanel>

                        <Button Grid.Column="1" Background="#3B82F6" Foreground="White" BorderThickness="0"
                            Padding="20,12" FontWeight="Medium">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="➕" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Thêm Người Dùng" FontSize="14"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!-- Modern Controls -->
                    <Grid Grid.Row="1" Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Modern Search -->
                        <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="16" Margin="0,0,15,0">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.05" BlurRadius="8"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

