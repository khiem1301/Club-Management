                                                        Padding="8,6" FontWeight="Medium" Margin="4,0,4,0"
                                                        Command="{Binding DataContext.ClubManagementViewModel.ManageLeadershipCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}">
                                                        <TextBlock Text="Lãnh Đạo" FontSize="10"/>
                                                    </Button>
                                                    -->

                                                    <Button Grid.Column="1" Background="#EC4899" Foreground="White" BorderThickness="0"
                                                        Padding="8,6" FontWeight="Medium" Margin="4,0,0,0"
                                                        Command="{Binding DataContext.ClubManagementViewModel.ViewEventsCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}">
                                                        <TextBlock Text="Sự Kiện" FontSize="10"/>
                                                    </Button>
