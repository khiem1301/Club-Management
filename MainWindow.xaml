                            <Button Command="{Binding NavigateToDashboardCommand}" Style="{StaticResource ModernNavButtonStyle}" Click="Button_Click" Margin="0,0,0,8"
                                    Visibility="{Binding CanAccessAdminFeatures, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#3B82F6" CornerRadius="8" Width="32" Height="32" Margin="0,0,12,0">
                                        <TextBlock Text="📊" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Bảng Điều Khiển" FontSize="14" FontWeight="Medium" VerticalAlignment="Center" Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                                </StackPanel>
                            </Button>

                            <!-- Users Management -->
                            <Button Command="{Binding OpenUserManagementCommand}" Style="{StaticResource ModernNavButtonStyle}" Margin="0,0,0,8"
