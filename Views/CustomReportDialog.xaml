<Window x:Class="ClubManagementApp.Views.CustomReportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Generate Custom Report" 
        WindowStartupLocation="CenterScreen"
        Width="600" Height="500"
        MinWidth="500" MinHeight="400"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow"
        Background="#f8f9fa">
    
    <Window.Resources>
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="30"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="4" BlurRadius="15"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#e9ecef"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="#ffffff"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007bff"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#6c757d"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#e9ecef"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="#ffffff"/>
            <Setter Property="Foreground" Value="#495057"/>
        </Style>
        
        <!-- Modern DatePicker Style -->
        <Style x:Key="ModernDatePickerStyle" TargetType="DatePicker">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#e9ecef"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="#ffffff"/>
            <Setter Property="Foreground" Value="#495057"/>
        </Style>
        
        <!-- Modern Label Style -->
        <Style x:Key="ModernLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        
        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#28a745"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#218838"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1e7e34"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6c757d"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5a6268"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#545b62"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Border Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,30">
                    <TextBlock Text="ðŸ“Š" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Generate Custom Report" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#212529" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,5"/>
                    <TextBlock Text="Configure your custom report parameters" 
                               FontSize="14" 
                               Foreground="#6c757d" 
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Form Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        
                        <!-- Report Title -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Report Title" Style="{StaticResource ModernLabelStyle}"/>
                            <TextBox x:Name="ReportTitleTextBox" 
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     Text="Custom Report"/>
                        </StackPanel>

                        <!-- Report Type -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Report Type" Style="{StaticResource ModernLabelStyle}"/>
                            <ComboBox x:Name="ReportTypeComboBox" 
                                      SelectionChanged="ReportTypeComboBox_SelectionChanged"
                                      Style="{StaticResource ModernComboBoxStyle}"
                                      SelectedIndex="0">
                                <ComboBoxItem Content="Activity Tracking" Tag="ActivityTracking"/>
                                <ComboBoxItem Content="Membership Statistics" Tag="MemberStatistics"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Date Range -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Start Date" Style="{StaticResource ModernLabelStyle}"/>
                                <DatePicker x:Name="StartDatePicker" 
                                            Style="{StaticResource ModernDatePickerStyle}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="End Date" Style="{StaticResource ModernLabelStyle}"/>
                                <DatePicker x:Name="EndDatePicker" 
                                            Style="{StaticResource ModernDatePickerStyle}"/>
                            </StackPanel>
                        </Grid>
                        <StackPanel x:Name="ClubSelectionPanel"
                                    Margin="0,0,0,20"
                                    Visibility="Collapsed">
                            <TextBlock Text="Select Club" Style="{StaticResource ModernLabelStyle}"/>
                            <ComboBox x:Name="ClubComboBox" 
                                      Style="{StaticResource ModernComboBoxStyle}"
                                      SelectedIndex="-1">
                                <ComboBoxItem Content="All Clubs" Tag="{x:Null}" IsSelected="True"/>
                                <ComboBoxItem Content="Tech Club"/>
                                <ComboBoxItem Content="Art Club"/>
                                <ComboBoxItem Content="Sports Club"/>
                            </ComboBox>
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>

                <!-- Buttons -->
                <StackPanel Grid.Row="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            Margin="0,30,0,0">
                    <Button Content="Cancel" 
                            Style="{StaticResource SecondaryButtonStyle}" 
                            Margin="0,0,15,0" 
                            MinWidth="100"
                            Click="CancelButton_Click"/>
                    <Button Content="Generate Report" 
                            Style="{StaticResource PrimaryButtonStyle}" 
                            MinWidth="130"
                            Click="GenerateButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>