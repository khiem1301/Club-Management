<Window x:Class="ClubManagementApp.Views.EditUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:ClubManagementApp.Models"
        Title="Edit User" Height="800" Width="1100"
        MinHeight="700" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow"
        Background="#f8f9fa">
    <Window.Resources>
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="30"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="4" BlurRadius="15"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#e9ecef"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="#ffffff"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007bff"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#6c757d"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernTextBoxStyleSmall" TargetType="TextBox">
            <Setter Property="Padding" Value="5,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#e9ecef"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="#ffffff"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}" 
                        CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007bff"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#6c757d"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <!-- Modern PasswordBox Style -->
        <Style x:Key="ModernPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#e9ecef"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="#ffffff"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007bff"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#6c757d"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#e9ecef"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="#ffffff"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <Grid>
                                <ToggleButton x:Name="ToggleButton" Background="Transparent" BorderThickness="0" 
                                              IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                              ClickMode="Press">
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Grid>
                                                <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False" 
                                                                  Content="{Binding SelectionBoxItem, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                                  ContentTemplate="{Binding SelectionBoxItemTemplate, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                                  Margin="12,10" 
                                                                  VerticalAlignment="Center" 
                                                                  HorizontalAlignment="Left"/>
                                                <Path x:Name="Arrow" HorizontalAlignment="Right" VerticalAlignment="Center" 
                                                      Margin="0,0,10,0" Fill="#6c757d" 
                                                      Data="M 0 0 L 4 4 L 8 0 Z"/>
                                            </Grid>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>
                                <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" 
                                       AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                    <Grid MaxHeight="{TemplateBinding MaxDropDownHeight}" MinWidth="{TemplateBinding ActualWidth}">
                                        <Border Background="White" BorderBrush="#e9ecef" BorderThickness="1" CornerRadius="8">
                                            <ScrollViewer>
                                                <StackPanel IsItemsHost="True"/>
                                            </ScrollViewer>
                                        </Border>
                                    </Grid>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007bff"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#6c757d"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern Label Style -->
        <Style x:Key="ModernLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        
        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007bff"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0056b3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004085"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6c757d"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#545b62"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3d4449"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="40">
        <Border Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,30">
                    <TextBlock Text="ðŸ‘¤ Edit User Profile" 
                               FontSize="28" FontWeight="Bold" 
                               Foreground="#2c3e50" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Update user information and manage account settings" 
                               FontSize="14" 
                               Foreground="#6c757d" 
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Form Fields -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,0,0,20">
                        <!-- Personal Information Section -->
                        <TextBlock Text="ðŸ“‹ Personal Information" 
                                   FontSize="18" FontWeight="Bold" 
                                   Foreground="#495057" 
                                   Margin="0,0,0,20"/>
                        
                        <!-- Two Column Layout for Name and Email -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Full Name -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Full Name *" Style="{StaticResource ModernLabelStyle}"/>
                                <TextBox x:Name="FullNameTextBox" 
                                         Style="{StaticResource ModernTextBoxStyle}"
                                         ToolTip="Enter the user's full name"/>
                            </StackPanel>

                            <!-- Email -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Email Address *" Style="{StaticResource ModernLabelStyle}"/>
                                <TextBox x:Name="EmailTextBox" 
                                         Style="{StaticResource ModernTextBoxStyle}"
                                         ToolTip="Enter a valid email address"/>
                            </StackPanel>
                        </Grid>

                        <!-- Two Column Layout for Role and Phone -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Role -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Role *" Style="{StaticResource ModernLabelStyle}"/>
                                <ComboBox x:Name="RoleComboBox" Style="{StaticResource ModernComboBoxStyle}"
                                            SelectedValuePath="Tag"
                                            DisplayMemberPath="Content"
                                            >
                                    <ComboBoxItem Content="Admin" Tag="{x:Static models:UserRole.Admin}"/>
                                    <ComboBoxItem Content="Chairman" Tag="{x:Static models:UserRole.Chairman}"/>
                                    <!--
                                    <ComboBoxItem Content="Club President" Tag="{x:Static models:UserRole.ClubPresident}"/>
                                    <ComboBoxItem Content="Chairman" Tag="{x:Static models:UserRole.Chairman}"/>
                                    <ComboBoxItem Content="Vice Chairman" Tag="{x:Static models:UserRole.ViceChairman}"/>
                                    <ComboBoxItem Content="Club Officer" Tag="{x:Static models:UserRole.ClubOfficer}"/>
                                    <ComboBoxItem Content="Team Leader" Tag="{x:Static models:UserRole.TeamLeader}"/>
                                    -->
                                    <ComboBoxItem Content="Member" Tag="{x:Static models:UserRole.Member}" IsSelected="True"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Phone Number -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Phone Number" Style="{StaticResource ModernLabelStyle}"/>
                                <TextBox x:Name="PhoneTextBox" 
                                         Style="{StaticResource ModernTextBoxStyleSmall}"
                                         ToolTip="Enter phone number (optional)"/>
                            </StackPanel>
                        </Grid>

                        <!-- Security Section -->
                        <TextBlock Text="ðŸ”’ Security Settings" 
                                   FontSize="18" FontWeight="Bold" 
                                   Foreground="#495057" 
                                   Margin="0,0,0,20"/>
                        
                        <!-- Password Change Section -->
                        <Border Background="#f8f9fa" BorderBrush="#e9ecef" BorderThickness="2" Padding="25" CornerRadius="12">
                            <StackPanel>
                                <TextBlock Text="ðŸ”‘ Change Password (Optional)" 
                                           FontWeight="Bold" 
                                           FontSize="16" 
                                           Foreground="#495057" 
                                           Margin="0,0,0,15"/>
                                
                                <!-- Two Column Layout for Passwords -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="New Password" Style="{StaticResource ModernLabelStyle}"/>
                                        <PasswordBox x:Name="NewPasswordBox" 
                                                     Style="{StaticResource ModernPasswordBoxStyle}"
                                                     ToolTip="Enter new password"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Confirm New Password" Style="{StaticResource ModernLabelStyle}"/>
                                        <PasswordBox x:Name="ConfirmNewPasswordBox" 
                                                     Style="{StaticResource ModernPasswordBoxStyle}"
                                                     ToolTip="Confirm the new password"/>
                                    </StackPanel>
                                </Grid>
                                
                                <Border Background="#e3f2fd" CornerRadius="8" Padding="15" Margin="0,15,0,0">
                                    <StackPanel>
                                        <TextBlock Text="ðŸ’¡ Password Requirements" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="14" 
                                                   Foreground="#1976d2" 
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Text="â€¢ Leave blank to keep current password" 
                                                   FontSize="12" 
                                                   Foreground="#424242" 
                                                   Margin="0,0,0,4"/>
                                        <TextBlock Text="â€¢ Use at least 6 characters" 
                                                   FontSize="12" 
                                                   Foreground="#424242" 
                                                   Margin="0,0,0,4"/>
                                        <TextBlock Text="â€¢ Both password fields must match" 
                                                   FontSize="12" 
                                                   Foreground="#424242"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- Buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Cancel" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Margin="0,0,15,0"
                            Padding="20,12"
                            Click="CancelButton_Click"/>
                    <Button Content="Save Changes" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Padding="20,12"
                            Click="SaveButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>